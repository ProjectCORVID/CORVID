var menu, viewer;

var make = function (what, containing) {
  var element = document.createElement(what);

  if (containing) 
    element.appendChild(containing);

  return element;
};

$(document).ready(function () {
  menu = $("div.leftMenu > ul");
  viewer = $("div.content");

  ["connect", "comms", "event", "cannonSearch"].forEach(function(name) {
    var a = make('a');

    a.innerText = name;
    $(a).on('click', function (e) {
      viewer.html("Loading " + name);
      viewer.load(name + ".html", function() {
          JUMLY.scan();
        });
    });

    menu.append(make('li', a));
  });
});
